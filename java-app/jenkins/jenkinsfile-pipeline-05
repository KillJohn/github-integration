pipeline {
  agent {
     node { 
        label 'node01'
        options { 
          timestamps() 
          skipDefaultCheckout(true)
          }

     } 
  }

  tools {
   maven 'maven-apache-3.8.4'
 }
 
stages {
 stage('Maven Package') {
   steps {
     dir('java-app'){
       sh 'mvn package'
     }
   }
 }
  stage('Build') {
   steps {
      cleanWs()
      sh 'touch `date`.txt'
   }
   post{
     success{
       step(followSymlinks: false, $class: 'ArtifactArchiver', artifacts: '*.txt')
     }
   }
 }
}

stage('validation') {
  steps {
    input 'is it working properly'
  }
}
stage('deploy') {
  steps {
    sh 'echo $JAVA'
    sh 'node version'
  }
  post{
    failure{
      sh 'echo "error"'
    }
  }
}

}